<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/signup_bg"
    android:layout_height="match_parent"
    tools:context="com.asadbaig.android.pikme.LoginActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilepic"
        android:layout_margin="10dp"
        android:src="@drawable/signup_avatar"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/logintext"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/profilepic"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:text="Please register with us to get "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/lt2"
        android:layout_below="@+id/logintext"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:text="started "/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sv"
        android:layout_below="@+id/lt2"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:background="@drawable/signup_fields_bg"
        android:layout_marginRight="30dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/firstName"
            android:hint="First name"
            android:maxLines="1"
            android:textColorHint="@color/lightGrey"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:id="@+id/v1"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:id="@+id/lastName"
            android:hint="Last name"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/lightGrey"
            android:drawablePadding="15dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:id="@+id/v2"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/birthday"
            android:hint="Select your birthday"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/lightGrey"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
           android:drawableRight="@drawable/dropdown_arrow"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:id="@+id/v3"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/genderspin"
            android:hint="Gender"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/lightGrey"
            android:layout_below="@+id/v3"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:drawableRight="@drawable/dropdown_arrow"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        
        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/gender"
            android:layout_marginBottom="10dp"
            android:entries="@array/gender"
            android:prompt="@string/gendertitle"
            android:layout_below="@+id/v3"
            style="@style/SpinnerTheme"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:id="@+id/v4"
            android:layout_below="@+id/genderspin"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>
        <EditText
            android:layout_width="match_parent"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:hint="Email"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/lightGrey"
            android:layout_below="@+id/v4"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:id="@+id/v5"
            android:layout_below="@+id/email"
            android:layout_marginRight="15dp"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl2"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/lightGrey"
                android:maxLines="1"
                android:id="@+id/password"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/show_password"
                />
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Already a member?"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:id="@+id/login"
                android:textSize="16sp"
                android:text=" Login"/>

        </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/continue_btn"
        android:layout_alignParentBottom="true"
        android:id="@+id/nextBtn"
        android:layout_alignParentRight="true"
        android:background="@drawable/continue_btn"
        android:layout_gravity="bottom|end"
        />


</RelativeLayout>
