<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">


    <include
        layout="@layout/findride_toolbar"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:elevation="25dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/leaving_from"
            android:hint="Leaving From"
            android:textColorHint="@color/lightGrey"
            android:drawablePadding="15dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/lightGrey"/>

            <ImageView
                android:layout_marginRight="50dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/replace_icon"
                android:scaleType="center"
                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/going"
            android:hint="Going to"
            android:textColorHint="@color/lightGrey"
            android:drawablePadding="15dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/date"
            android:hint="Date"
            android:textColorHint="@color/lightGrey"
            android:drawablePadding="15dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableRight="@drawable/calendar_icon"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/leaving_after"
            android:hint="Leaving After"
            android:textColorHint="@color/lightGrey"
            android:drawablePadding="15dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/time_icon"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/lightGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Seats"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="16sp"
                android:layout_weight="2"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/less_icon">
                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:text="1"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/add_icon">
                </View>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="FIND NOW"
            android:id="@+id/btn_findNow"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/round_button_drawable"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Searches"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    </ListView>

</LinearLayout>